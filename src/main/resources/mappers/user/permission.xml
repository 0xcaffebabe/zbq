<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="wang.ismy.zbq.dao.PermissionMapper">


    <insert id="insertPermission" parameterType="wang.ismy.zbq.entity.user.UserPermission" useGeneratedKeys="true" keyProperty="userPermissionId">
        INSERT INTO tb_user_permission(create_time,update_time)
                VALUES (NOW(),NOW())
    </insert>
    <select id="selectById" resultType="wang.ismy.zbq.entity.user.UserPermission">
        SELECT * FROM tb_user_permission WHERE user_permission_id = #{id}
    </select>
</mapper>